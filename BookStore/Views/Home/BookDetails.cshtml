@model BookStore.Models.Book
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@section Scripts{
    <link href="~/Content/CSS.css" rel="stylesheet" />
}

<div class="row">
    <div class="page-header">
        <h2>BookDetails</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        <img src="@Url.Content(Model.CoverImagePath)" alt="@Model.Name"
             class="img-thumbnail img-responsive" style="width:300px" />
    </div>
    <div class="col-md-6">
        <h3>@Model.Name</h3>
        <p>by @Model.Author</p>
        <hr />
        <p>@Model.Notes</p>
    </div>
    <div class="col-md-3" id="checkoutbox">
        <div class="row" style="padding:20px">
            <p style="float:left"><label class="glyphicon glyphicon-record"></label>  Buy New</p>
            <p style="float:right">List Price:  $<span id="bookPrice" style="color:red">@Model.Price</span></p>
        </div>
        <div class="row" style="padding-left:8px">
            <form action="/ShoppingCart/OrderNow" method="post" class="form-inline">
                <div class="form-group">
                    <label for="amount" class="col-xs-2 control-label">Qty:</label>
                    <div class="col-xs-offset-1 col-xs-2">
                        <select name="amount" id="amount" class="form-control">
                            <option value="1" selected>1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                        </select>
                    </div>
                </div>
                <input type="hidden" name="bookId" value="@Model.Id" />
                <div class="input-group" style="padding:12px">
                    <button type="submit" class="btn btn-info" style="width:230px"><span class="glyphicon glyphicon-shopping-cart"></span>Add to Cart</button>
                </div>
            </form>
        </div>
    </div>
</div>

