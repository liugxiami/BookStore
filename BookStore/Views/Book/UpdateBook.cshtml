@model BookStore.Models.Book
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@section Scripts{
    <link href="~/Content/Edit_CSS.css" rel="stylesheet" />
}

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Update Book #@Model.Id</h3>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("UpdateBook", "Book", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.CoverImagePath)
                @Html.HiddenFor(m => m.Notes)
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Price, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-usd"></span></span>
                            @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Author, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Author, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.UnitsInStock, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.UnitsInStock, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">Browse</label>
                        <div class="col-md-10">
                            <input type="file" name="cover" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Update" class="btn btn-default" />
                        </div>
                    </div>
            }
        </div>
    </div>
</div>
