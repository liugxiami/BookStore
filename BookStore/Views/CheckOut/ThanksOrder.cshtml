@model List<BookStore.Models.Item>
@{
    ViewBag.Title = "ThanksOrder";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Thank you for your order</h2>
<p class="lead">Order Number is: @ViewBag.orderId</p>
<p>You will receive an email confirmation shortly at @ViewBag.Email</p>
<div class="row">
    <div class="panel panel-info">
        <div class="row panel-body">
            <table class="table table-striped table-hover">
                <tr>
                    <th></th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>sub Total</th>
                </tr>
                @{
                    double total = 0;
                }
                @foreach (var product in this.Model)
                {
                    <tr>
                        <td>
                            <p>@product.Book.Name</p>
                        </td>
                        <td>
                            <p>@product.Amount</p>
                        </td>
                        <td>
                            <p>@product.Book.Price</p>
                        </td>
                        <td>
                            <p>@(product.Book.Price * product.Amount)</p>
                        </td>
                    </tr>
                    @(total += @product.Book.Price * product.Amount)
                }
            </table>
        </div>
    </div>
</div>
<div class="row">
    <p class="pull-right"><strong>Total:$@(total)</strong></p>
</div>

