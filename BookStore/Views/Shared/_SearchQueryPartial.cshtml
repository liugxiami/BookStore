@using (Html.BeginForm("SearchBooksResult", "Search", FormMethod.Post, new { @class = "navbar-form navbar-left", role = "search" }))
{
    <div class="form-group">
        @Html.TextBox("query", null, new
   {
       @id = "searchquery",
       @class = "form-control input-sm",
       placeholder = "Search"
   })
    </div>
    <button type="submit" class="btn btn-default btn-xs">Submit</button>
}
