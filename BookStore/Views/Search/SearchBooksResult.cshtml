@model List<BookStore.Models.Book>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@section Scripts{

}

<div class="row">
    <div class="page-header">
        <h1>
            Book Results <br />
            <small>Results for your search term: @ViewBag.SearchQuery</small>
        </h1>
        <p><span class="badge">@ViewBag.booksCount</span> book(s) are found for you!</p>
    </div>
    <div class="list-group">
        @foreach (var book in this.Model)
        {
            <a href="@Url.Action("BookDetails","Home",new { id=@book.Id})" class="list-group-item">
                <div class="container">
                    <div class="col-md-2">
                        <img src="@Url.Content(book.CoverImagePath)" alt="@book.Name"
                             class="img-thumbnail img-responsive" style="max-width:64px" />
                    </div>
                    <div class="col-md-7">
                        <h4 style="text-align:left">@book.Name <small>By:@book.Author</small></h4>
                    </div>
                    <div class="col-md-1">
                        <h4>$@book.Price</h4>
                    </div>
                    <div class="col-md-2">
                        <p><span class="badge">@book.UnitsInStock</span> books in stock</p>
                    </div>
                </div>
            </a>
        }
    </div>
</div>
